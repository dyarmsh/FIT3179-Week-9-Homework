{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 500,
    "data": {
      "url": "universities.csv",
      "format": {"type": "csv"}
    },
    "transform": [
      {
        "aggregate": [{"op": "count", "as": "num_universities"}],
        "groupby": ["Country"]
      }
    ],
    "mark": "bar",
    "encoding": {
      "x": {
        "field": "Country",
        "type": "nominal",
        "title": "Country",
        "sort": "-y"
      },
      "y": {
        "field": "num_universities",
        "type": "quantitative",
        "title": "Number of Universities"
      },
      "tooltip": [
        {"field": "country", "type": "nominal", "title": "Country"},
        {"field": "num_universities", "type": "quantitative", "title": "Number of Universities"}
      ]
    }
  }
  